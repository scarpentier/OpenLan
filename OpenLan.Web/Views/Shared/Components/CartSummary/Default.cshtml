@if (ViewBag.CartCount > 0)
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("Index", "ShoppingCart")" title="@ViewBag.CartSummary">
                <span class="glyphicon glyphicon glyphicon-shopping-cart"></span>
                @ViewBag.CartCount
            </a>
        </li>
    </ul>
}
